{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
		"prettier",
		"plugin:node/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
		"prettier"
    ],
    "rules": {
		"prettier/prettier": "warn",
		"no-unused-vars": "warn",
		"no-console": "off",
		"func-names": "off",
		"no-process-exit": "off",
		"object-shorthand": "off",
		"class-methods-use-this": "off"
    }
}
