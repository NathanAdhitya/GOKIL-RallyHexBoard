{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["es2020"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "rootDir": "src",
    "moduleResolution": "node",
    "strict": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "src"
  },
  "include": ["src/**/*.ts", "typings/**/*.ts"],
  "exclude": ["__tests__", "build", "**/*.test.ts", "temp", "node_modules"]
}
